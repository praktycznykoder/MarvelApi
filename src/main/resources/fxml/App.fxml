<?import javafx.scene.control.cell.*?>
<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>


<BorderPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" 
            minWidth="-Infinity" prefHeight="400.0" prefWidth="600.0" 
            xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1"
    fx:id="appBorderPane"
    fx:controller="pl.praktycznykoder.marvelapi.javafx.AppFXMLController">
    
   <top>
      <MenuBar BorderPane.alignment="CENTER">
        <menus>
          <Menu mnemonicParsing="false" text="File">
            <items>
              <MenuItem mnemonicParsing="false" text="Close" />
            </items>
          </Menu>
          <Menu mnemonicParsing="false" text="Data">
            <items>
                <MenuItem mnemonicParsing="false" text="Characters" 
                    onAction="#handleDataCharacterMenuItem"  />
                <MenuItem mnemonicParsing="false" text="Comics" 
                    onAction="#handleDataComicsMenuItem" />
                <MenuItem mnemonicParsing="false" text="Creators" 
                    onAction="#handleDataCreatorMenuItem" />
                <MenuItem mnemonicParsing="false" text="Events" 
                    onAction="#handleDataEventMenuItem" />
                <MenuItem mnemonicParsing="false" text="Series" 
                    onAction="#handleDataSeriesMenuItem" />
                <MenuItem mnemonicParsing="false" text="Stories" 
                    onAction="#handleDataStoryMenuItem" />
            </items>
          </Menu>
          <Menu mnemonicParsing="false" text="Help">
            <items>
              <MenuItem mnemonicParsing="false" text="About" />
            </items>
          </Menu>
        </menus>
      </MenuBar>
   </top>
</BorderPane>
